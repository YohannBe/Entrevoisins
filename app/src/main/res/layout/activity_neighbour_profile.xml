<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundGray"
    tools:context=".ui.neighbour_list.NeighbourProfile">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/floatingActionButton_add_favorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="260dp"
                    android:layout_marginEnd="30dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:backgroundTint="#FFFFFF"
                    app:srcCompat="@android:drawable/btn_star_big_on" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_profile_imageView"
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        android:contentDescription="@string/profile_picture_contentdescription"
                        android:scaleType="centerCrop">

                    </ImageView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:paddingHorizontal="10dp"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="3dp"
                        app:cardMaxElevation="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                            <TextView
                                android:id="@+id/contact_name_profile_textView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="10dp"
                                android:background="@color/white"
                                android:paddingVertical="10dp"
                                android:textSize="20sp">

                            </TextView>

                            <TextView
                                android:id="@+id/contact_location_profile_textView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/contact_name_profile_textView"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:background="@color/white"
                                android:drawableStart="@drawable/location"
                                android:paddingVertical="10dp"
                                android:textSize="15sp">

                            </TextView>

                            <TextView
                                android:id="@+id/contact_phone_profile_textView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/contact_location_profile_textView"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:background="@color/white"
                                android:drawableStart="@drawable/phone"
                                android:paddingVertical="10dp"
                                android:textSize="15sp">

                            </TextView>

                            <TextView
                                android:id="@+id/contact_website_profile_textView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/contact_phone_profile_textView"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:background="@color/white"
                                android:drawableStart="@drawable/website"
                                android:paddingVertical="10dp"
                                android:shadowColor="@color/black"
                                android:shadowDx="4"
                                android:shadowRadius="4"
                                android:textSize="15sp">

                            </TextView>

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10dp"
                        android:paddingHorizontal="10dp"
                        app:cardCornerRadius="3dp"
                        app:cardMaxElevation="5dp"
                        android:layout_marginBottom="30dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/description_profile_textView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:paddingVertical="10dp"
                                android:text="@string/about_me_title"
                                android:textSize="20sp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp">

                            </TextView>

                            <TextView
                                android:id="@+id/actual_description_profile_textView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/description_profile_textView"
                                android:background="@color/white"
                                android:paddingVertical="10dp"
                                android:shadowColor="@color/black"
                                android:shadowDx="4"
                                android:shadowRadius="4"
                                android:textSize="15sp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp">

                            </TextView>

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>


                </LinearLayout>


                <TextView
                    android:id="@+id/name_title_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="200dp"
                    android:textColor="@color/white"
                    android:textSize="30sp">

                </TextView>

            </FrameLayout>

        </ScrollView>

        <ImageButton
            android:id="@+id/arrow_back_imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:contentDescription="@string/arrow_back_contentDescription"
            android:src="@drawable/arrow_back">

        </ImageButton>

    </FrameLayout>

</LinearLayout>